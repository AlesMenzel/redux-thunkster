{
  "name": "redux-thunkster",
  "version": "0.3.0",
  "description": "Redux middleware for listening on actions.",
  "main": "./lib/thunkster.js",
  "module": "./es/thunkster.js",
  "scripts": {
    "build": "run-s clean build:lib build:es build:umd build:umd:min",
    "build:lib": "babel ./src --out-dir ./lib --ignore \"**/*.spec.js\"",
    "build:es":
      "cross-env BABEL_ENV=es babel ./src --out-dir ./es --ignore \"**/*.spec.js\"",
    "build:umd":
      "cross-env NODE_ENV=development webpack --output dist/redux-thunkster.js",
    "build:umd:min":
      "cross-env NODE_ENV=production webpack --output dist/redux-thunkster.min.js",
    "build:es:dev:watch": "npm run build:es -- --source-maps --watch",
    "clean": "rimraf ./dist ./lib ./es",
    "test": "run-s test:lint test:unit",
    "test:lint": "eslint .",
    "test:unit":
      "cross-env NODE_ENV=test mocha --require babel-polyfill --compilers js:babel-core/register \"./src/**/*.spec.js\"",
    "format": "prettier --write \"*.{js,json,css,md}\"",
    "predeploy": "cd example/real-world && npm install && npm run build",
    "deploy": "gh-pages -d ./example/real-world/build",
    "prepublishOnly": "run-s test build"
  },
  "keywords": ["redux", "side-effects", "redux-listener"],
  "author": "Ale≈° Menzel <alesmenzel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "gh-pages": "^1.1.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.10",
    "webpack": "^4.9.1",
    "webpack-cli": "^2.1.4"
  },
  "peerDependencies": {
    "redux": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "dependencies": {}
}
